{
	"name": "x-draw-extention",
	"version": "1.0.0",
	"description": "抓取网页内容到Bear",
	"manifest_version": 2,
	"icons": {
		"64": "bear-logo.png"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_title": "x-draw-extention"
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"css": [
				"contentScript.css"
			],
			"js": [
				"contentScript.js"
			],
			"matches": [
				"<all_urls>"
			],
			"run_at": "document_end"
		}
	]
}